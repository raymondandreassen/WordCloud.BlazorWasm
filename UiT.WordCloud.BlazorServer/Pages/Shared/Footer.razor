
<AuthorizeView> <!-- Roles="Admin" -->
    <Authorized>
        <MudAlert 
            Style="position: fixed; bottom: 0; width:200px"
            Class="ma-6 pa-2" 
            Severity="Severity.Normal" 
            AlertTextPosition="AlertTextPosition.Center" 
            Dense="true"
                  Icon="@Icons.Material.Filled.Info"
            OnClick="GoProject">
            <MudTooltip Text="Gå til Prosjekt siden" Placement="Placement.Top">
                <i>UiT 2022 - ITA</i>
            </MudTooltip>
        </MudAlert>
    </Authorized>

    <NotAuthorized>
        <MudAlert Style="position: fixed; bottom: 0; width:200px"
            Class="ma-6 pa-2"
            Severity="Severity.Normal"
            AlertTextPosition="AlertTextPosition.Center"
            Dense="true"
                  Icon="@Icons.Material.Filled.Info">
        <MudTooltip Text="Laget av avdeling for IT, UiT Universitetet i Tromsø" Placement="Placement.Top">
            <i>UiT 2023 - ITA</i>
        </MudTooltip>
        </MudAlert>
    </NotAuthorized>
</AuthorizeView>

@code {
    [Inject] NavigationManager Navigation { get; set; } = null!;
    private void GoProject() => Navigation.NavigateTo("/_Project");
}